{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "logs:*"
            ],
            "Resource": "arn:aws:logs:*:*:*"
        },
        {
            "Sid": "AutoMirrorExecutionPolicy",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeInstances",
                "ec2:describeTrafficMirrorTargets",
                "ec2:describeTrafficMirrorFilters",
                "ec2:createTrafficMirrorSession",
                "ec2:describeTrafficMirrorSessions",
                "ec2:CreateTags"
            ],
            "Resource": "*"
        }
    ]
}
